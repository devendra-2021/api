extends layout 

block content
  h1= title
  p Welcome to #{title}

block content

  if items.length
    table.listing-table.table-dark.table-striped
      tr
        th Name
        th Email
        th first_round
        th second_round
        th third_round
      each row in items
        tr
          td= row.name
          td= row.email
          td= row.first_round
          td= row.second_round
          td= row.third_round
  else
    p No registrations yet 


